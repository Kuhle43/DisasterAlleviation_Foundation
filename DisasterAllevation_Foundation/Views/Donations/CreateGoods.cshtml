@model DisasterAlleviation_Foundation.Models.GoodsDonation

@{
    ViewData["Title"] = "Donate Goods";
}

<h1>Donate Goods</h1>

<h4>Submit a Goods Donation</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="CreateGoods">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["SuccessMessage"]
                </div>
            }

            <div class="form-group">
                <label asp-for="DonorName" class="control-label"></label>
                <input asp-for="DonorName" class="form-control" placeholder="Optional: Enter your name or leave blank for anonymous" />
                <span asp-validation-for="DonorName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GoodsCategory" class="control-label"></label>
                <input asp-for="GoodsCategory" class="form-control" placeholder="e.g., Clothing, Food, Tools" />
                <span asp-validation-for="GoodsCategory" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GoodsDescription" class="control-label"></label>
                <textarea asp-for="GoodsDescription" class="form-control" rows="3" placeholder="Describe the items and quantity, e.g., '10 boxes of canned soup'"></textarea>
                <span asp-validation-for="GoodsDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DisasterId" class="control-label">Target Disaster</label>

               
                <select asp-for="DisasterId" class="form-control" asp-items="@(ViewData["DisasterId"] as SelectList)">
                    <option value="">-- Select Disaster (Optional) --</option>
                </select>

                <span asp-validation-for="DisasterId" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">
                <input type="submit" value="Submit Goods Donation" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Donation List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}