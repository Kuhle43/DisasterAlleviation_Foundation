@model DisasterAlleviation_Foundation.Models.MonetaryDonation

@{
    ViewData["Title"] = "Donate Money";
}

<h1>Donate Money</h1>

<h4>Submit a Monetary Donation</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="CreateMonetary">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @TempData["SuccessMessage"]
                </div>
            }

            <div class="form-group">
                <label asp-for="DonorName" class="control-label"></label>
                <input asp-for="DonorName" class="form-control" placeholder="Optional: Enter your name or leave blank for anonymous" />
                <span asp-validation-for="DonorName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" type="number" min="1" step="0.01" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DisasterId" class="control-label">Target Disaster</label>

                
                <select asp-for="DisasterId" class="form-control" asp-items="@(ViewData["DisasterId"] as SelectList)">
                    <option value="">-- Select Disaster (Optional) --</option>
                </select>

                <span asp-validation-for="DisasterId" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">
                <input type="submit" value="Submit Monetary Donation" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Donation List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}