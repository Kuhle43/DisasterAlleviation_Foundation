@model DisasterAlleviation_Foundation.Models.Donation

@{
    ViewData["Title"] = "Make a Donation";
}

<h2>@ViewData["Title"]</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="DonorName" class="control-label"></label>
                <input asp-for="DonorName" class="form-control" placeholder="Enter 'Anonymous' or your name" />
                <span asp-validation-for="DonorName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Type" class="control-label">Donation Type</label>
                <select asp-for="Type" class="form-control" id="donationType">
                    <option value="">-- Select Type --</option>
                    <option value="Money">Money</option>
                    <option value="Goods">Goods</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group" id="amountField" style="display:none;">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" type="number" step="0.01" min="0" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <div class="form-group" id="goodsDescriptionField" style="display:none;">
                <label asp-for="GoodsDescription" class="control-label"></label>
                <textarea asp-for="GoodsDescription" class="form-control" placeholder="e.g., 50 blankets, 20 crates of water"></textarea>
                <span asp-validation-for="GoodsDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DisasterId" class="control-label">Target Disaster (Optional)</label>
                <select asp-for="DisasterId" class="form-control" asp-items="ViewBag.DisasterId">
                    <option value="">-- No specific disaster --</option>
                </select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Submit Donation" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById('donationType').addEventListener('change', function() {
            var type = this.value;
            var amountField = document.getElementById('amountField');
            var goodsDescriptionField = document.getElementById('goodsDescriptionField');

            if (type === 'Money') {
                amountField.style.display = 'block';
                goodsDescriptionField.style.display = 'none';
            } else if (type === 'Goods') {
                amountField.style.display = 'none';
                goodsDescriptionField.style.display = 'block';
            } else {
                amountField.style.display = 'none';
                goodsDescriptionField.style.display = 'none';
            }
        });
    </script>
}