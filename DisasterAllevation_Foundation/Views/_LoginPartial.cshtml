@using Microsoft.AspNetCore.Identity
@using DisasterAlleviation_Foundation.Models // Your custom ApplicationUser

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            {{-- This link points to the required physical file: /Areas/Identity/Pages/Account/Manage/Index.cshtml --}}
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                Hello @(UserManager.GetUserAsync(User).Result?.FullName ?? User.Identity.Name)!
            </a>
        </li>
        <li class="nav-item">
            {{-- Logout must be a POST request and should use the standard Identity Razor Page --}}
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            {{-- Standard Razor Page link for Register --}}
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            {{-- Standard Razor Page link for Login --}}
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>